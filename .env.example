# Environment Configuration
# Copy this file to .env and fill in your actual values

# API Keys (Optional - for real service integrations)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database Configuration
DATABASE_URL=sqlite:///./demo.db
CHECKPOINT_DB=./checkpoints.db

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# MCP Configuration
MCP_COMMON_URL=http://localhost:8001
MCP_ATLAS_URL=http://localhost:8002

# Bigtool Configuration
BIGTOOL_PRIORITY=balanced  # Options: speed, cost, accuracy, balanced

# Workflow Configuration
MATCH_THRESHOLD=0.90
TWO_WAY_TOLERANCE_PCT=5
AUTO_APPROVE_THRESHOLD=5000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External Services (Optional)
GOOGLE_VISION_API_KEY=your_key
AWS_TEXTRACT_REGION=us-east-1
CLEARBIT_API_KEY=your_key
SENDGRID_API_KEY=your_key

# CORS Settings
CORS_ORIGINS=*
